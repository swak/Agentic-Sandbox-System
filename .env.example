# Agentic Sandbox System - Environment Variables
# Copy this file to .env and fill in your values

# ===================================================================
# API KEYS (Required)
# ===================================================================

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================

POSTGRES_USER=agentuser
POSTGRES_PASSWORD=agentpass
POSTGRES_DB=agentsandbox
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ===================================================================
# API CONFIGURATION
# ===================================================================

API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# ===================================================================
# FRONTEND CONFIGURATION
# ===================================================================

REACT_APP_API_URL=http://localhost:8000
FRONTEND_PORT=3000

# ===================================================================
# SECURITY
# ===================================================================

# Encryption key for API keys (change in production!)
ENCRYPTION_KEY=change-this-to-a-secure-random-key-in-production

# ===================================================================
# RAG CONFIGURATION (Optional - uses defaults if not set)
# ===================================================================

EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=3

# ===================================================================
# RATE LIMITING (Optional)
# ===================================================================

MAX_REQUESTS_PER_MINUTE=100
MAX_TOKENS_PER_HOUR=10000

# ===================================================================
# FILE UPLOAD (Optional)
# ===================================================================

MAX_UPLOAD_SIZE_MB=1
ALLOWED_EXTENSIONS=txt,json,pdf,docx
